%section.register.container
  .row
    / .col-sm-10.col-sm-offset-1
    .col-sm-2
    .col-sm-8
      / = bootstrap_form_for @user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6", html: { class: "form-horizontal" } do |f|
      = bootstrap_form_for @user do |f|
        %header
          %h1(id='thick') Register
        %fieldset
          = f.text_field :screen_name, label: "Screen Name"
          = f.email_field :email, label: "Email Address"
          = f.password_field :password
          = f.form_group do
            = f.submit "Sign Up"
            