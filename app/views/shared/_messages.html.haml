- flash.each do |name, msg|
  - if msg.is_a?(String) 
    %div(class="alert alert-#{name == 'notice' ? 'success' : 'danger'}")
      %button(type="button" class="close" data-dismiss="alert")
        %span(aria-hidden="true")
          &times;
        %span(class="sr-only")
          Close
      = content_tag :div, msg, :id => "flash_#{name}"